<div class="row">
  <div class="col-auto colorslate">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4 justify-space-around">

  {{#if projects.length}}
  <div class="col-md-6 project-list logincard">
    <h3>Current Posts:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-9">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-3">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}


  <div class="col-md-5 colorslate">
    <h3>Create a New Post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Post Title</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">Your thoughts...</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

</div>

<script src="./js/profile.js"></script>
