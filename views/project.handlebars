  <p class="colorslate">We are the same</p>
  {{else}}
  <p class="colorslate">We are different</p>
  <p class="colorslate">username: {{user.name}}</p>
  <p class="colorslate">name: {{user.user.email}}</p>
  <p class="colorslate">project user id: {{user_id}}</p>
  {{/if}} --}}


  {{! Start of comment entering--}}
  {{#if logged_in}}
  <div class="row"> 

    <div class="col-md-12 colorslate">
      <h3 class="margin10">Would you like to add a comment?</h3>
        <form class="form new-comment-form">

          <div class="form-group">
            <label for="comment">Comment</label>
            <textarea class="form-input col-md-12 comment" id="comment" name="comment"></textarea>
            <input type='hidden' value={{id}} id="projectId">
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-primary margin10">Add your Comment</button>
          </div>
        </form>
    </div>
  </div>
      
  {{else}}
  <a class="btn btn-primary" href="/login">Login to Leave a Comment</a>
  {{/if}}

</div>

<script src="../js/project.js"></script>