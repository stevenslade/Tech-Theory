<div>

  <div class="row mb-4 project postborder">
    <div class="col-md-8">
      <h2>
        <a class="colordark" href="/project/{{id}}">{{name}}</a>
      </h2>
    </div>
    <div class="col-md-4">
      <h2>
        <p class="alignr">Created by {{user.name}} on {{format_date date_created}}</p>
      </h2>
    </div>
    <div class="col-md-12 whitebackg minh">
      <p>
        {{description}}
      </p>
    </div>
  </div>

  {{#if comments.length}}
    <div class="col-md-6 project-list logincard">
      <h3>Current Comments:</h3>
      {{#each comments as |comment|}}
        <div class="row mb-2">
          <h2>
            <p class="alignr">Created by {{user.name}} on {{format_date date_created}}</p>
          </h2>
          <div class="col-md-9">
            <p>{{comment.description}}</p>
          </div>
      {{/each}}
    </div>
  {{/if}}

  {{!-- <div class="col-md-4">
      <p class="colorslate">dataid: {{id}}</p>
        <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
  </div> --}}

